                    </button>
                </div>

                <!-- Search -->
                <div class="search-container">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search endpoints..." id="searchInput">
                        <button class="search-clear" id="searchClear">
                            <i class="fas fa-times"></i>
